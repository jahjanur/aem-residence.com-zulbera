# Copy to .env and fill in values. Never commit .env.
# From repo root: cp apps/api/.env.example apps/api/.env

# SQLite for local dev (no Docker). File is created at apps/api/prisma/dev.db
DATABASE_URL="file:./prisma/dev.db"

# Session secret for cookies (required, use a long random string in production)
SESSION_SECRET=your-session-secret-change-in-production

# Allowed origin for CORS (frontend URL; Vite may use 5173, 5174, etc.)
CORS_ORIGIN=http://localhost:5173

# Node environment
NODE_ENV=development

# Optional: API port (default 4000)
# PORT=4000

# When this app is served under a path (e.g. aem-residence.com/zulbera), set to that path (no trailing slash)
# BASE_PATH=/zulbera
